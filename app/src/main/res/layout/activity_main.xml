<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4c4c4c"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:logo="@drawable/swannews123"
        app:navigationIcon="@drawable/ic_baseline_menu_24"
        app:subtitle="Hello"
        app:title="SWANNEWS"
        app:titleMarginStart="40dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu2"
        android:background="@color/colorPrimary">
    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <ScrollView
        android:layout_width="402dp"
        android:layout_height="103dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="91dp"


        >

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4c4c4c"

                android:orientation="horizontal"

                >

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="80dp"
                    android:background="@drawable/rectangle"
                    android:layout_marginRight="10dp"
                    android:gravity="center"

                    >

                    <TextView
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:text="Pikachu found!"
                        android:textColor="#ffffff"
                        android:textSize="11sp">

                    </TextView>

                    <ImageButton

                        android:layout_width="89dp"
                        android:layout_height="59dp"
                        android:layout_marginRight="15dp"

                        android:background="#4c4c4c"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pika123"
                        android:text="1" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle"
                    android:gravity="center"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:text="New Iphone release!"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp">

                    </TextView>

                    <ImageButton
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="5dp"
                        android:background="#4c4c4c"
                        android:scaleType="centerCrop"
                        android:src="@drawable/iphone123"
                        android:text="1" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle"
                    android:gravity="center"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:text="Nestle do it again!"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp">

                    </TextView>

                    <ImageButton
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:background="#4c4c4c"
                        android:scaleType="centerCrop"
                        android:src="@drawable/nestle123"
                        android:text="1" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="#4c4c4c"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cat123"
                    android:text="1" />

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="#4c4c4c"
                    android:scaleType="centerCrop"
                    android:src="@drawable/flyingpig123"
                    android:text="1" />

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_baseline_menu_24"
                    android:text="1" />

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_baseline_menu_24"
                    android:text="1" />
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>

    <ScrollView
        android:layout_width="402dp"
        android:layout_height="20dp"
        android:layout_above="@+id/main_listview"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="-5dp">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="60dp"
                    android:layout_height="15dp"
                    android:layout_above="@+id/main_listview"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/rectangle"
                    android:gravity="center"
                    android:text="Politics"
                    android:textColor="#FFFFFF"
                    android:textSize="8dp">

                </Button>
                <Button
                    android:layout_width="60dp"
                    android:layout_height="15dp"
                    android:layout_above="@+id/main_listview"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/rectangle2"
                    android:gravity="center"
                    android:text="Science"
                    android:textColor="#FFFFFF"
                    android:textSize="8dp">

                </Button>
                <Button
                    android:layout_width="60dp"
                    android:layout_height="15dp"
                    android:layout_above="@+id/main_listview"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/rectangle2"
                    android:gravity="center"
                    android:text="Food"
                    android:textColor="#FFFFFF"
                    android:textSize="8dp">

                </Button>
                <Button
                    android:layout_width="60dp"
                    android:layout_height="15dp"
                    android:layout_above="@+id/main_listview"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/rectangle2"
                    android:gravity="center"
                    android:text="Art"
                    android:textColor="#FFFFFF"
                    android:textSize="8dp">

                </Button>
                <Button
                    android:layout_width="60dp"
                    android:layout_height="15dp"
                    android:layout_above="@+id/main_listview"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/rectangle2"
                    android:gravity="center"
                    android:text="Tech"
                    android:textColor="#FFFFFF"
                    android:textSize="8dp">

                </Button>

            </LinearLayout>

        </HorizontalScrollView>
    </ScrollView>

    <ListView
        android:id="@+id/main_listview"
        android:layout_width="402dp"
        android:layout_height="410dp"
        android:layout_above="@+id/bottom_navigation"
        android:background="@android:drawable/dialog_holo_light_frame"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-12dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="8dp"
        >


    </ListView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="-38dp"
        android:text="TOP NEWS"
        android:textColor="#FBF6F6"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/spinnerResult"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="313dp"
        android:text="Politics"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spinnerResult"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="258dp"
        android:background="#000000"
        app:srcCompat="@drawable/ic_baseline_notifications_none_24" />

    <!--    <Spinner-->
    <!--        android:id="@+id/spinner1"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_alignBottom="@+id/main_listview"-->
    <!--        android:layout_marginStart="34dp"-->
    <!--        android:layout_marginEnd="279dp"-->
    <!--        android:layout_marginBottom="675dp"-->
    <!--        android:layout_toEndOf="@+id/spinnerResult"-->
    <!--        android:background="#FFFFFF">-->

    <!--    </Spinner>-->

    <Spinner
        android:id="@+id/spinner1"
        style="@style/SpinnerTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerResult"

        android:layout_alignBottom="@+id/spinnerResult"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="92dp"
        android:layout_marginTop="-25dp"
        android:layout_marginEnd="301dp"
        android:layout_marginBottom="1dp"
        >

    </Spinner>

    <ImageButton

        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="67dp"
        android:background="@drawable/roundbtn"

        android:src="@drawable/ic_baseline_add_24" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-11dp"
        android:layout_toEndOf="@+id/textView2"
        android:background="#4c4c4c"
        app:srcCompat="@drawable/ic_baseline_minimize_24" />



</RelativeLayout>